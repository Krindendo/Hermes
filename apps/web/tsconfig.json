{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"],
      "@/contexts/*": ["src/contexts/*"],
      "@/modules/*": ["src/modules/*"],
      "@/pages/*": ["src/pages/*"],
      "@/components/*": ["src/shared-components/*"],
      "@/hooks/*": ["src/shared-hooks/*"],
      "@/styles/*": ["src/styles/*"],
      "@/ui/*": ["src/ui/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
