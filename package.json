{
  "name": "hermes",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean:linux": "turbo run clean:linux && rm -rf node_modules",
    "clean:win": "turbo run clean:win && rmdir /s /q node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint-config-custom": "*",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "latest",
    "turbo": "^1.4.3"
  },
  "engines": {
    "yarn": ">=1.22.0",
    "node": ">=14.0.0",
    "npm": "please-use-yarn"
  },
  "dependencies": {},
  "packageManager": "yarn@1.22.19"
}
